  import {
    stagger,
    spring,
    timeline,
    type TimelineDefinition,
  } from "@motionone/dom";

  const links = document.querySelectorAll(".link");

  const sequence = [
    [
      links,
      { y: ["60%", "0%"], opacity: [0, 1], scale: [0, 1] },
      {
        at: "-0.5",
        duration: 0.4,
        delay: stagger(0.3),
        easing: spring({ velocity: 1, stiffness: 20, damping: 10 }),
