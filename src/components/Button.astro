---
interface Props {
    rounded?: boolean;
    animate?: string;
}

const { rounded, animate } = Astro.props;
---

<button data-cursor="block"

    class={`text-xl max-h-[50px]  
            text-black dark:text-white px-5 py-2 border dark:border-indigo-500 border-orange-600

            dark:hover:text-indigo-500 dark:hover:border-indigo-500 
            hover:text-orange-600  hover:border-orange-600 

            transition-colors duration-300 ease-in-out 
            bg-darkslate-900 
            dark:shadow-[3px_2px_0px_#6366f1]
            shadow-[3px_2px_0px_#ea580c]
            ${animate}
            ${rounded ? "rounded-full" : "rounded-lg"}`}
>
    <slot />
</button>
