---
interface Props {
    rounded?: boolean;
    animate?: string;
}

const { rounded, animate } = Astro.props;
---

<button data-cursor="block"

    class={`text-xl max-h-[50px]  
            text-black dark:text-white px-5 py-2 border border-indigo-500
            dark:hover:text-indigo-500 hover:text-indigo-500 hover:border-indigo-500 
            transition-colors duration-300 ease-in-out 
            bg-darkslate-900 
            shadow-[3px_2px_0px_#4F46E5]
            ${animate}
            ${rounded ? "rounded-full" : "rounded-lg"}`}
>
    <slot />
</button>
