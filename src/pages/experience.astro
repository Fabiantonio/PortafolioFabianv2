---
import Layout from "../layouts/Layout.astro";
import { EXPERIENCE } from "../lib/constants";
---

<Layout title="Experiencia Académica">
  <main class="flex flex-col justify-center items-start md:max-w-3xl mx-auto mb-16 px-4">
    <div class="relative w-full" >
      {/* Línea del timeline */}
      <div  class="absolute left-8 top-0 h-full w-1 bg-orange-100 dark:bg-[#2c2c2c] origin-top"></div>
      
      {EXPERIENCE.map((exp, index) => (
        <div data-aos="fade" data-aos-duration="2000" class="relative pl-24 py-8 group">
          {/* Círculo del timeline */}
          <div class="absolute left-8 top-12 -ml-3.5 h-8 w-8 transition-transform duration-200 dark:bg-indigo-500 bg-orange-600  rounded-full flex items-center justify-center text-white shadow-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              {index === 0 && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />}
              {index === 1 && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />}
              {index === 2 && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />}
              {index === 3 && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />}
            </svg>
          </div>

          {/* Contenido */}
          <div class="flex flex-col md:flex-row gap-6 p-6 bg-white dark:bg-[#131313] border-[1.6px] border-[#E0E0E0] dark:border-[#2c2c2c] rounded-xl shadow-md hover:border-orange-600 dark:hover:border-indigo-500 transition-colors">
            {/* Sección izquierda */}
            <div class="md:w-48 flex-shrink-0">
              <div data-cursor="block" class="bg-orange-100 dark:bg-[#1a1a1a] px-3 py-1 rounded-full inline-block">
                <span class="text-sm font-semibold dark:text-indigo-500 text-orange-600">{exp.link}</span>
              </div>
              <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">{exp.date}</p>
            </div>

            {/* Sección derecha */}
            <div class="flex-grow">
              <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-3">{exp.title}</h3>
              <p class="text-gray-600 dark:text-gray-300 leading-relaxed mb-4">{exp.description}</p>
              
              {/* Tecnologías */}
              <div class="flex flex-wrap gap-2">
                {exp.technologies.map(tech => (
                  <span data-cursor="block" class="px-3 py-1 text-xs font-medium bg-orange-50 dark:bg-[#1a1a1a] text-orange-600 dark:text-indigo-400 rounded-full">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </main>
</Layout>

<script>
  import AOS from "aos";
  import "aos/dist/aos.css";
  document.addEventListener("astro:page-load", () => {
    AOS.init();
  });
</script>


<style>
  .group:hover .absolute.left-8.top-12 {
    transform: scale(1.15);
  }
</style>