---

<script>
  import {
    stagger,
    spring,
    timeline,
    type TimelineDefinition,
  } from "@motionone/dom";

  document.addEventListener("astro:page-load", () => {
    const cards = document.querySelectorAll(".card");

    const sequence = [
      [
        cards,

        { y: ["60%", "0%"], opacity: [0, 1] },
        {
          at: "-0.5",
          duration: 0.4,
          delay: stagger(0.3),
          easing: spring({ velocity: 100, stiffness: 30, damping: 10 }),
        },
      ],
    ];

    timeline(sequence as TimelineDefinition);
  });
</script>

